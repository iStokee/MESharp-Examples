<Window x:Class="StokeeFishing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StokeeFishing.ViewModels"
        Title="Stokee AIO Fishing"
        Width="1000"
        Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Window.Resources>
        <!-- Color scheme -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#16213e"/>
        <SolidColorBrush x:Key="CardBg" Color="#0f3460"/>
        <SolidColorBrush x:Key="AccentColor" Color="#e94560"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#eee"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#aaa"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4ecca3"/>
        <SolidColorBrush x:Key="WarningColor" Color="#ffc107"/>

        <!-- Card style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- Label style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <!-- Value style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Big value style -->
        <Style x:Key="BigValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource SecondaryBg}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Stokee AIO Fishing"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="All-in-one fishing script with power fishing and banking support"
                       Foreground="{StaticResource TextSecondary}"
                       FontSize="12"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Configuration -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Status Card -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="STATUS" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding GameStatus}" Foreground="{StaticResource SuccessColor}" Margin="0,4"/>
                            <TextBlock Text="{Binding PlayerPosition}" Style="{StaticResource LabelStyle}"/>
                            <Separator Margin="0,8" Background="{StaticResource SecondaryBg}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Script: " Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ScriptStatus}" Foreground="{StaticResource AccentColor}" FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CurrentState}" Style="{StaticResource LabelStyle}" Margin="0,4"/>
                        </StackPanel>
                    </Border>

                    <!-- Location Selection -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="FISHING LOCATION" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding AvailableLocations}"
                                      SelectedItem="{Binding SelectedLocation}"
                                      DisplayMemberPath="Name"
                                      Margin="0,8,0,0"/>

                            <TextBlock Text="TARGET FISH" Style="{StaticResource LabelStyle}" Margin="0,12,0,0"/>
                            <ComboBox ItemsSource="{Binding AvailableFishTypes}"
                                      SelectedItem="{Binding SelectedFishType}"
                                      DisplayMemberPath="Name"/>
                        </StackPanel>
                    </Border>

                    <!-- Inventory Action -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="WHEN INVENTORY FULL" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding InventoryActions}"
                                      SelectedItem="{Binding SelectedInventoryAction}"
                                      Margin="0,8,0,0"/>

                            <TextBlock Text="BANK LOCATION" Style="{StaticResource LabelStyle}" Margin="0,12,0,0"/>
                            <ComboBox ItemsSource="{Binding AvailableBanks}"
                                      SelectedItem="{Binding SelectedBank}"
                                      DisplayMemberPath="Name"/>

                            <TextBlock Text="RETURN METHOD" Style="{StaticResource LabelStyle}" Margin="0,12,0,0"/>
                            <ComboBox ItemsSource="{Binding ReturnMethods}"
                                      SelectedItem="{Binding SelectedReturnMethod}"/>
                        </StackPanel>
                    </Border>

                    <!-- Options -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="OPTIONS" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <CheckBox Content="Use boost potions"
                                      IsChecked="{Binding UseBoostPotions}"
                                      Foreground="{StaticResource TextPrimary}"
                                      Margin="0,8,0,0"/>
                            <CheckBox Content="Use bank teleport items"
                                      IsChecked="{Binding UseBankTeleport}"
                                      Foreground="{StaticResource TextPrimary}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Center Panel - Metrics Dashboard -->
            <Grid Grid.Column="1" Margin="8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Metrics Row -->
                <UniformGrid Grid.Row="0" Rows="1" Columns="4">
                    <!-- Runtime -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="RUNTIME" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Runtime}" Style="{StaticResource BigValueStyle}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Fish Caught -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="FISH CAUGHT" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalFishCaught}" Style="{StaticResource BigValueStyle}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding FishPerHour}" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- XP Gained -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="XP GAINED" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding FishingXpGained, StringFormat=N0}" Style="{StaticResource BigValueStyle}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding FishingXpPerHour}" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- GP Value -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="GP VALUE" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalGp}" Style="{StaticResource BigValueStyle}" Foreground="{StaticResource WarningColor}" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding GpPerHour}" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Detailed Stats Grid -->
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Level & Progress -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Current Level" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource ValueStyle}">
                                    <Run Text="{Binding CurrentFishingLevel}"/>
                                    <Run Text=" (+" Foreground="{StaticResource SuccessColor}"/><Run Text="{Binding LevelsGained}" Foreground="{StaticResource SuccessColor}"/><Run Text=")" Foreground="{StaticResource SuccessColor}"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="XP to Next Level" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding XpToNextLevel}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Time to Level" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding TimeToNextLevel}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Trips" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource ValueStyle}">
                                    <Run Text="{Binding TripCount}"/>
                                    <Run Text=" (avg: " Foreground="{StaticResource TextSecondary}"/><Run Text="{Binding AvgFishPerTrip}" Foreground="{StaticResource TextSecondary}"/><Run Text=")" Foreground="{StaticResource TextSecondary}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Log -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="LOG" Style="{StaticResource LabelStyle}" FontWeight="Bold" VerticalAlignment="Center"/>
                                <Button Content="Clear"
                                        Command="{Binding ClearLogCommand}"
                                        Background="Transparent"
                                        Foreground="{StaticResource TextSecondary}"
                                        BorderThickness="0"
                                        FontSize="10"
                                        Margin="8,0,0,0"
                                        Cursor="Hand"/>
                            </StackPanel>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding LogText, Mode=OneWay}"
                                         Background="Transparent"
                                         Foreground="{StaticResource TextSecondary}"
                                         BorderThickness="0"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         VerticalScrollBarVisibility="Auto"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Right Panel - Fish Details -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Current Trip -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="CURRENT TRIP" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <TextBlock Style="{StaticResource BigValueStyle}" Margin="0,8,0,0">
                                <Run Text="{Binding CurrentTripFish}"/>
                                <Run Text=" fish" FontSize="14" FontWeight="Normal" Foreground="{StaticResource TextSecondary}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Fish Breakdown (placeholder for future) -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="FISH BREAKDOWN" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <TextBlock Text="Coming soon..."
                                       Foreground="{StaticResource TextSecondary}"
                                       FontStyle="Italic"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Location Info -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="LOCATION INFO" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedLocation.Name, FallbackValue='No location selected'}"
                                       Style="{StaticResource ValueStyle}"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="{Binding SelectedLocation.Requirements, FallbackValue=''}"
                                       Foreground="{StaticResource WarningColor}"
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Quick Tips -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="TIPS" Style="{StaticResource LabelStyle}" FontWeight="Bold"/>
                            <TextBlock Text="* Power fishing (dropping) is fastest XP"
                                       Foreground="{StaticResource TextSecondary}"
                                       FontSize="11"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="* Banking earns GP but slower XP"
                                       Foreground="{StaticResource TextSecondary}"
                                       FontSize="11"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="* Use action bar for fast dropping"
                                       Foreground="{StaticResource TextSecondary}"
                                       FontSize="11"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Footer - Control Buttons -->
        <Border Grid.Row="2"
                Background="{StaticResource SecondaryBg}"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Script by iStokee | " Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    <TextBlock Text="written for MESharp" Foreground="{StaticResource AccentColor}" FontSize="11"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="{Binding IsRunning, Converter={x:Null}, FallbackValue='Start Script'}"
                            Command="{Binding StartCommand}"
                            Width="150">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Content" Value="Stop Script"/>
                                        <Setter Property="Background" Value="#dc3545"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                        <Setter Property="Content" Value="Start Script"/>
                                        <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
