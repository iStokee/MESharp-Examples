<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <UseWindowsForms>true</UseWindowsForms>
    <PlatformTarget>x64</PlatformTarget>
    <OutputType>Library</OutputType>
  </PropertyGroup>
  <Target Name="CopyScriptToExamplesFolder" AfterTargets="Build">
    <PropertyGroup>
      <ExamplesPath>$(USERPROFILE)\MemoryError\MESharpExamples\CLI\</ExamplesPath>
      <ScriptsPath>$(USERPROFILE)\MemoryError\CSharp_scripts\</ScriptsPath>
    </PropertyGroup>
    <MakeDir Directories="$(ExamplesPath)" Condition="!Exists('$(ExamplesPath)')" />
    <MakeDir Directories="$(ScriptsPath)" Condition="!Exists('$(ScriptsPath)')" />
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ExamplesPath)" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ScriptsPath)" SkipUnchangedFiles="true" />
    <Message Importance="High" Text="[MESharpExamples.CLI] Copied $(TargetFileName) to $(ExamplesPath)" />
    <Message Importance="High" Text="[MESharpExamples.CLI] Copied $(TargetFileName) to $(ScriptsPath)" />
  </Target>
  <ItemGroup>
    <Reference Include="csharp_interop">
      <HintPath>..\..\ME\x64\Build_DLL\csharp_interop.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>
