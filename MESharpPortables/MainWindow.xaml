<Window x:Class="MESharpExamples.Portables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MESharp Portables"
        Height="520"
        Width="940"
        Background="White"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="268*" />
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="508*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="3" Orientation="Vertical" Margin="0,0,0,48">
            <TextBlock Text="Portable Stations"
                       FontSize="24"
                       FontWeight="Bold" />
            <TextBlock Text="A modern take on the classic Stokee Portables helper.
Choose a station, configuration, and bank preset, then start the automation loop or run a single test cycle."
                       TextWrapping="Wrap"
                       Foreground="Gray" />
        </StackPanel>

        <StackPanel Grid.Column="0" Margin="0,64,16,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <GroupBox Header="Setup" Margin="0,0,0,16">
                <StackPanel Margin="12">
                    <TextBlock Text="Portable Station" FontWeight="SemiBold" />
                    <ComboBox x:Name="StationCombo"
                              Margin="0,4,0,12"
                              SelectionChanged="StationCombo_SelectionChanged"
                              DisplayMemberPath="Name" />

                    <TextBlock Text="Configuration" FontWeight="SemiBold" />
                    <ComboBox x:Name="ModeCombo"
                              Margin="0,4,0,12"
                              DisplayMemberPath="Name" />

                    <TextBlock Text="Bank Preset" FontWeight="SemiBold" />
                    <ComboBox x:Name="PresetCombo"
                              Margin="0,4,0,12" />

                    <TextBlock Text="Station Notes" FontWeight="SemiBold" />
                    <TextBlock x:Name="StationNotesText"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Controls">
                <StackPanel Orientation="Horizontal" Margin="12">
                    <Button x:Name="StartButton"
                            Width="120"
                            Margin="0,0,8,0"
                            Content="Start"
                            Click="StartButton_Click" />
                    <Button x:Name="StopButton"
                            Width="120"
                            Margin="0,0,8,0"
                            Content="Stop"
                            Click="StopButton_Click" />
                    <Button x:Name="TestButton"
                            Width="150"
                            Content="Test Single Cycle"
                            Click="TestButton_Click" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Live Stats" Margin="0,16,0,0">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Runtime" Grid.Row="0" Grid.Column="0" />
                    <TextBlock x:Name="RuntimeText" Grid.Row="0" Grid.Column="1" FontWeight="Bold" />

                    <TextBlock Text="Status" Grid.Row="1" Grid.Column="0" />
                    <TextBlock x:Name="StatusText" Grid.Row="1" Grid.Column="1" FontWeight="Bold" />

                    <TextBlock Text="Player" Grid.Row="2" Grid.Column="0" />
                    <TextBlock x:Name="PlayerText" Grid.Row="2" Grid.Column="1" />

                    <TextBlock Text="Skill" Grid.Row="3" Grid.Column="0" />
                    <TextBlock x:Name="SkillText" Grid.Row="3" Grid.Column="1" />

                    <TextBlock Text="Cycles" Grid.Row="4" Grid.Column="0" />
                    <TextBlock x:Name="CycleText" Grid.Row="4" Grid.Column="1" />

                    <TextBlock Text="Inventory" Grid.Row="5" Grid.Column="0" />
                    <TextBlock x:Name="InventoryText" Grid.Row="5" Grid.Column="1" />
                </Grid>
            </GroupBox>
        </StackPanel>

        <Grid Grid.Column="2" Margin="0,64,0,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <GroupBox Header="Cycle Log" Margin="0,0,0,8">
                <ListBox x:Name="LogList"
                         Margin="8" />
            </GroupBox>

            <GroupBox Header="Quick Reference" Grid.Row="1">
                <TextBlock Margin="8"
                           TextWrapping="Wrap"
                           Text=" Use this as a starting point for real automation: swap the simulated steps in PortablesRunner with actual Inventory, Objects, and Npcs actions." />
            </GroupBox>
        </Grid>
    </Grid>
</Window>
