<Window x:Class="MESharpExamples.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MESharp WPF Example"
        Width="900"
        Height="520"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,16">
            <TextBlock Text="MESharp WPF Dashboard" FontSize="24" FontWeight="Bold" />
            <TextBlock Text="Use this window as a starting point for building tooling or overlays." Foreground="Gray" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,16,0">
            <TextBlock Text="Game Status" FontSize="16" FontWeight="SemiBold" />
            <Border Padding="12" Background="#11151B" CornerRadius="6" Margin="0,8,0,16">
                <StackPanel>
                    <TextBlock Text="State" FontWeight="Bold" />
                    <TextBlock Text="{Binding GameStateText}" Margin="0,0,0,8" />
                    <TextBlock Text="Player" FontWeight="Bold" />
                    <TextBlock Text="{Binding PlayerTileText}" Margin="0,0,0,8" />
                    <TextBlock Text="Injection Flags" FontWeight="Bold" />
                    <TextBlock Text="{Binding InjectionFlagsText}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <TextBlock Text="Actions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="0,0,8,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button Content="Refresh Inventory" Width="150" Command="{Binding RefreshInventoryCommand}" />
                <Button Content="Describe Interaction" Width="170" Command="{Binding DescribeInteractionCommand}" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <GroupBox Header="Inventory Snapshot" Margin="0,0,0,8">
                <ListView ItemsSource="{Binding InventoryItems}" Name="InventoryList" Margin="8">
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn Header="Slot" Width="60" DisplayMemberBinding="{Binding Slot}" />
                            <GridViewColumn Header="Item" Width="220" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Amount" Width="120" DisplayMemberBinding="{Binding Amount}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <GroupBox Header="Log" Grid.Row="1">
                <TextBox
                         Margin="8"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         IsReadOnly="True"
                         Text="{Binding LogText}" />
            </GroupBox>
        </Grid>
    </Grid>
</Window>
